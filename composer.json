{
  "name": "baks-dev/skeleton",
  "type": "project",
  "license": "MIT",
  "description": "Минимальный проект BaksDevelopment",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.4",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-exif": "*",
    "ext-gd": "*",
    "ext-redis": "*",
    "ext-openssl": "*",
    "ext-sockets": "*",
    "ext-mbstring": "*",
    "baks-dev/core": "*",
    "baks-dev/users-user": "*",
    "baks-dev/users-profile-group": "*",
    "baks-dev/users-profile-type": "*",
    "baks-dev/users-profile-user": "*",
    "baks-dev/auth-email": "*",
    "baks-dev/files-res": "*",
    "baks-dev/files-cdn": "*",
    "baks-dev/settings-main": "*",
    "baks-dev/reference-color": "*",
    "baks-dev/reference-gender": "*",
    "baks-dev/reference-region": "*",
    "baks-dev/field-pack": "*",
    "baks-dev/menu-admin": "*",
    "doctrine/dbal": "*",
    "doctrine/orm": "*",
    "doctrine/doctrine-migrations-bundle": "*",

    "symfony/flex": "^2",

    "symfony/dotenv": "*",
    "symfony/framework-bundle": "*",
    "symfony/runtime": "*",
    "symfony/yaml": "*",
    "symfony/lock": "*",
    "symfony/form": "*",
    "symfony/messenger": "*",
    "symfony/doctrine-messenger": "*",
    "symfony/redis-messenger": "*",
    "symfony/scheduler": "*",
    "symfony/console": "*",
    "symfony/translation": "*",
    "symfony/twig-bundle": "*",
    "symfony/test-pack": "*",
    "symfony/security-bundle": "*",
    "symfony/http-client": "*",
    "symfony/mailer": "*",

    "symfony/monolog-bundle": "*",
    "symfony/validator": "*",
    "symfony/rate-limiter": "*",
    "symfony/expression-language": "*",
    "symfony/uid": "*",
    "symfony/security-csrf": "*",
    "symfony/twig-pack": "*",
    "twig/intl-extra": "*",
    "twig/extra-bundle": "*",
    "symfony/intl": "*",
    "symfony/process": "*"

  },
  "flex-require": {
    "baks-dev/core": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "symfony/profiler-pack": "*",
    "symfony/var-dumper": "*",
    "symfony/debug-bundle": "*",
    "symfony/debug-pack": "*",
    "phpunit/phpunit": "^11.1",
    "symfony/web-profiler-bundle": "*"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "symfony/flex": true,
      "symfony/runtime": true
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {}
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*",
    "symfony/polyfill-php82": "*",
    "symfony/polyfill-php83": "*",
    "symfony/polyfill-php84": "*"
  },
  "scripts": {
    "auto-scripts": {
      "baks:assets:install": "symfony-cmd",
      "baks:cache:clear": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "7.3.*",

      "endpoint": [
        "https://api.github.com/repos/baks-dev/recipes/contents/index.json",
        "flex://defaults"
      ]
    }
  }
}